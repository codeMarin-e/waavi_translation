{
    "name": "marinar/waavi_translation",
    "description": "A Translation package for Laravel  with database and cache support",
    "keywords": [
        "waavi",
        "laravel-translator",
        "laravel",
        "translator",
        "translation",
        "localization"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Waavi",
            "email": "info@waavi.com",
            "homepage": "http://waavi.com"
        }
    ],
    "require": {
        "laravel/framework": "~6.0",
        "doctrine/dbal": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit" : "~8.3",
        "orchestra/testbench": "~4.0",
        "mockery/mockery": "^1.2.3"
    },
    "autoload": {
        "psr-4": {
            "Waavi\\Translation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Waavi\\Translation\\Test\\": "tests"
        }
    },

    "extra": {
        "laravel": {
            "providers": [
                "Waavi\\Translation\\TranslationServiceProvider"
            ],
            "aliases": {
                "TranslationCache": "Waavi\\Translation\\TranslationCache"
            }
        }
    }
}
